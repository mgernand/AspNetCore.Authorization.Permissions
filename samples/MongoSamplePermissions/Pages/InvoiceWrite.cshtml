@page
@model MongoSamplePermissions.Pages.InvoiceWriteModel
@{
    ViewData["Title"] = "Invoice.Write";
}

<div class="text-center">
    <h1 class="display-4">Invoice.Write</h1>
    <p>Invoice.Write</p>
    <form method="post">

        <div class="row">
            <label class="col-sm-2 col-form-label col-form-label-sm" for="total">Total:</label>
            <div class="col-sm-10">
                <input class="form-control form-control-sm" type="text" name="total" id="total" placeholder="Total"/>
            </div>
        </div>

        <div class="row">
            <label class="col-sm-2 col-form-label col-form-label-sm" for="note">Note:</label>
            <div class="col-sm-10">
                <input class="form-control form-control-sm" type="text" name="note" id="note" placeholder="Note"/>
            </div>
        </div>

        <button class="btn btn-sm btn-primary" type="submit">Add Invoice</button>
    </form>
</div>
