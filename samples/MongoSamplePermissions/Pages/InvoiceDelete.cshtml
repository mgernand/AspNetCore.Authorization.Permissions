@page
@using MongoSamplePermissions.Model
@using MongoDB.Driver
@model MongoSamplePermissions.Pages.InvoiceDeleteModel
@{
    ViewData["Title"] = "Invoice.Delete";
}

<div class="text-center">
    <h1 class="display-4">Invoice.Delete</h1>
    <p>Invoice.Delete</p>
    <table class="table table-striped table-hover table-bordered">
        <thead>
        <tr>
            <th scope="col" style="width: 30%">ID</th>
            <th scope="col" style="width: 20%">Total</th>
            <th scope="col" style="width: 45%">Note</th>
            <th scope="col" style="width: 5%"></th>
        </tr>
        </thead>
        <tbody>
        @foreach(Invoice invoice in Model.Context.GetCollection<Invoice>().AsQueryable().ToList())
        {
            <tr scope="row">
                <td>@invoice.Id</td>
                <td>@invoice.Total.ToString("C2")</td>
                <td>@invoice.Note</td>
                <td>
                    <form asp-page-handler="delete" method="post">
                        <button class="btn btn-sm btn-primary">Delete</button>
                        <input type="hidden" name="id" value="@invoice.Id">
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
